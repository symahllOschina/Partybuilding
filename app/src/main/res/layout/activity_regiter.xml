<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="姓名"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />

        <EditText
            android:id="@+id/nameEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/shape_white_round_border"
            android:padding="5dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize"
            tools:text="姓名" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />

        <EditText
            android:id="@+id/phoneEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/shape_white_round_border"
            android:padding="5dp"
            android:inputType="phone"
            android:digits="0123456789"
            android:maxLength="11"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="身份证号"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />

        <EditText
            android:id="@+id/idEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/shape_white_round_border"
            android:padding="5dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="设置项"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/mediumTextSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="密码"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />

        <EditText
            android:id="@+id/newPasswdEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/shape_white_round_border"
            android:padding="5dp"
            android:maxLength="20"
            android:inputType="textPassword"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认密码"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />

        <EditText
            android:id="@+id/newPasswdConfirmEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLength="20"
            android:inputType="textPassword"
            android:background="@drawable/shape_white_round_border"
            android:padding="5dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="密保问题"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />

        <TextView
            android:id="@+id/secretQuestionTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="请选择"
            android:drawableRight="@drawable/ic_arrow_down"
            android:background="@drawable/shape_white_round_border"
            android:padding="5dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="密保答案"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />

        <EditText
            android:id="@+id/secretAnswerEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/shape_white_round_border"
            android:padding="5dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="注：密保问题及答案作为个人密码找回的唯一途径，请妥善记录保管"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/mediumTextSize" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_btn_red"
        android:onClick="submit"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/mediumTextSize" />

</LinearLayout>