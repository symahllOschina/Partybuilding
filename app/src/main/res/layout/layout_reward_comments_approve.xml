<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/activity_bg"
    android:padding="8dp">

    <TextView
        android:id="@+id/commentTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/shape_white_round_border"
        android:padding="5dp"
        android:text="发表评论"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/smallTextSize" />

    <TextView
        android:id="@+id/rewardTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/commentsCount"
        android:drawableLeft="@drawable/ic_reward"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="打赏"
        android:textColor="@color/gray_555"
        android:textSize="@dimen/smallTextSize" />

    <TextView
        android:id="@+id/commentsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_comments"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:textColor="@color/gray_555"
        android:textSize="@dimen/mediumTextSize"
        tools:text="245" />

    <com.huaneng.zhdj.view.ApproveView
        android:id="@+id/approveCountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>