<com.scwang.smartrefresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/activity_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/officeTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/dangwubangong"
                    android:gravity="center"
                    android:text="党务办公"
                    android:textColor="@color/gray_555"
                    android:textSize="@dimen/smallTextSize" />

                <TextView
                    android:id="@+id/partyJoinTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/dangyuanfazhan"
                    android:gravity="center"
                    android:text="党员发展"
                    android:textColor="@color/gray_555"
                    android:textSize="@dimen/smallTextSize" />

                <TextView
                    android:id="@+id/organTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/zuzhijigou"
                    android:gravity="center"
                    android:text="组织机构"
                    android:textColor="@color/gray_555"
                    android:textSize="@dimen/smallTextSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/partyRegulationTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/dangguiwenjian"
                    android:gravity="center"
                    android:tag="0"
                    android:text="党规文件"
                    android:textColor="@color/gray_555"
                    android:textSize="@dimen/smallTextSize" />

                <TextView
                    android:id="@+id/partyDuesTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/dangfeijiaona"
                    android:gravity="center"
                    android:text="党费缴纳"
                    android:textColor="@color/gray_555"
                    android:textSize="@dimen/smallTextSize" />

                <TextView
                    android:id="@+id/timetableTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/lituixiudangyuan"
                    android:gravity="center"
                    android:tag="1"
                    android:text="离退休党员"
                    android:textColor="@color/gray_555"
                    android:textSize="@dimen/smallTextSize" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/content_frame"
                android:background="@color/activity_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </ScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>